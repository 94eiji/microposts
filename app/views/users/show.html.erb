<h1><%= gravatar_for @user %></h1>

<div class="form-horizontal" >
  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">名前:</label>
      <div class="col-sm-10">
        <div class="well well-sm">
          <p><%= @user.name %></p>
        </div>
    </div>
  </div>

  <div class="form-group">
    <label for="inputEmail" class="col-sm-2 control-label">メールアドレス:</label>
      <div class="col-sm-10">
        <div class="well well-sm">
          <p><%= @user.email %></p>
        </div>
      </div>
  </div>

  <div class="form-group">
    <label for="inputArea" class="col-sm-2 control-label">地域:</label>
      <div class="col-sm-10">
        <div class="well well-sm">
          <p><%= @user.area %></p>
        </div>
    </div>
  </div>
</div>