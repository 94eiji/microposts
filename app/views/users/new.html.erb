<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |u| %>
    
      <%= render 'shared/error_messages', object: u.object %>

      <%= u.label :name %>
      <%= u.text_field :name %>
      
      <%= u.label :email %>
      <%= u.text_field :email %>
      
      <%= u.label :password %>
      <%= u.password_field :password %>
      
      <%= u.label :password_confirmation %>
      <%= u.password_field :password_confirmation %>
      
      <%= u.label :area %>
      <%= u.select :area, area_list, class: "form-control" %>
      
      <%= u.submit "Create my account", class: "btn btn-large btn-primary" %>

    <% end %>
  </div>
</div>